= form_for @assessment do |f|
  - if @assessment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assessment.errors.count, "error")} prohibited this assessment from being saved:"
      %ul
        - @assessment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, rows: 3
  .field
    = f.label :instructions
    = f.text_area :instructions, rows: 3
  .field
    = f.label :default_tag
    = f.select :default_tag, answer_type_options(@assessment.default_tag)
  .field
    = f.label :default_layout
    = f.select :default_layout, display_type_options(@assessment.default_layout,true)
  .field
    = f.label :max_raw
    = f.text_field :max_raw
  .field
    = f.label :max_weighted
    = f.text_field :max_weighted
  %h4 Application Defined Options
  .field
    = f.label :status
    = f.select :status, status_options(@assessment.status)
    %span.annotate Application defined status
  .field
    = f.label :category
    = f.text_field :category
    %span.annotate Application defined search key
  .field
    = f.label :key
    = f.text_field :key
    %span.annotate Application defined search key
  .field
    = f.label :assessing_key
    = f.text_field :assessing_key
    %span.annotate Application defined search key
    
  .actions
    = f.submit 'Save'
